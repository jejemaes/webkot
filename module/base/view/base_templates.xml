	<template id="base.flash_message" name="Flash Messages">
		<t t-foreach="$session_flash_messages" t-as="$message_type">
			<div t-att-class="'alert alert-' . $message_type" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				  	<span aria-hidden="true">&amp;times;</span>
				</button>
			 	<t t-foreach="$session_flash_messages[$message_type]" t-as="$message">
			 		<t t-raw="$message"/><br/>
			 	</t>
			</div>
		</t>
	</template>
	
