<?xml version="1.0" encoding="UTF-8"?>
<data>
	
	<template id="link.page_links" name="Page Links">	   
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Les Liens
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			    	<t t-foreach="$categories" t-as="$category">
			    		<h4><t t-esc="$category->description"/></h4>
			    		<table class="table table-hover">
			    			<tbody>
			    				<t t-foreach="$links_by_category[$category->id]" t-as="$link">
			    					<tr>
			    						<td><t t-esc="$link->name"/></td>
			    						<td><a t-att-href="$link->url" target="_blank"><t t-esc="$link->url"/></a></td>
			    					</tr>
			    				</t>
			    			</tbody>
			    		</table>
			    	</t>
			    </div>
			</div>
		</t>
	</template>
	
</data>
