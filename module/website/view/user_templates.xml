<?xml version="1.0" encoding="UTF-8"?>
<data>

	<template id="website.user_list" name="Website Public User List">		
		<t t-call="website.layout">
			<div class="row">
				<div class="col-md-12">
					<h1 class="page-header">Utilisateurs <small> La liste publique</small></h1>
				</div>
				<div class="col-md-12">
					<table class="table table-striped"> 
						<thead> 
							<tr> 
								<th>#</th> 
								<th>Username</th> 
								<th>First Name</th> 
								<th>Last Name</th> 
							</tr> 
						</thead> 
						<tbody> 
							<t t-foreach="$user_list" t-as="$user">
								<tr> 
									<td><t t-esc="$user->id"/></td> 
									<td><t t-esc="$user->login"/></td> 
									<td><t t-esc="$user->firstname"/></td> 
									<td><t t-esc="$user->name"/></td> 
								</tr> 
							</t> 
						</tbody> 
					</table>
					<t t-call="website.pager"/>
				</div>
			</div>
		</t>
	</template>
	
	<template id="website.user_profile" name="Website Public User Page">		
		<t t-call="website.layout">
			<div class="row">
				<div class="col-md-12">
					<h1 class="page-header">Utilisateurs <small> <t t-esc="$user->login"/></small></h1>
				</div>
				<div class="col-md-12">
					<div class="row">
	                	<div class="col-md-3 col-lg-3 " align="center"> 
	                		<img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"/> 
	                	</div>
	                
	                	<div class=" col-md-9 col-lg-9 "> 
		                  	<table class="table table-user-information">
			                    <tbody>
			                    	<tr>
			                        	<td>Login</td>
			                        	<td><t t-esc="$user->login"/></td>
			                      	</tr>
			                    	<tr>
			                        	<td>Pr√©nom:</td>
			                        	<td><t t-esc="$user->firstname"/></td>
			                      	</tr>
			                      	<tr>
			                        	<td>Nom:</td>
			                        	<td><t t-esc="$user->name"/></td>
			                      	</tr>
			                      	<tr>
			                        	<td>Adresse:</td>
			                        	<td><t t-esc="$user->address"/></td>
			                      	</tr>
			                      	<tr>
			                        	<td>Ecole:</td>
			                        	<td><t t-esc="$user->school"/></td>
			                      	</tr>
			                      	<tr>
			                        	<td>Etude:</td>
			                        	<td><t t-esc="$user->section"/></td>
			                      	</tr>
			                      	<tr>
			                        	<td>Date d'inscription:</td>
			                        	<td><t t-esc="$user->subscription"/></td>
			                      	</tr>
			                   	</tbody>              
		                  	</table>       
	               		</div>
	              	</div>
				</div>
			</div>
		</t>
	</template>
	
</data>