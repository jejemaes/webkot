<?xml version="1.0" encoding="UTF-8"?>
<data>

	<template id="website.user_list" name="User List Page">	
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Utilisateur <small>Liste des utilisateurs</small>
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			        <table class="table table-striped table-condensed">
                  		<thead>
		                  	<tr>
		                      	<th>Id</th>
		                      	<th>Username</th>                                          
		                  	</tr>
		              	</thead>  
		              	<tbody>
		              		<t t-foreach="$users" t-as="$u">
			              		<tr>
	                    			<td><t t-esc="$u->id"/></td>
	                    			<td><a t-att-href="$router->urlFor('website_user_profile', array('user_id' => $u->id))"><t t-esc="$u->login"/></a></td>                                     
	                			</tr>
		              		</t>
                		</tbody>
		        	</table>
		        	
		        	<t t-call="website.pagination">
		        		<t t-set="pager" t-value="$pager"/>
		        		<t t-set="page" t-value="$page"/>
		        		<t t-set="total" t-value="$total_page"/>
		        	</t>

			    </div>
			</div>
		</t>
	</template>
	
	<template id="website.user_profile" name="User Profile Page">	
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Utilisateur <small><t t-esc="$user->login"/></small>
				</h1>
			</div>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<h4>Profile de <i><t t-esc="$user->login"/></i></h4>
					<ul>
						<li><b>Login : </b><t t-esc="$user->login"/></li>
						<li><b>Email : </b><t t-esc="$user->mail"/></li>
					</ul>
					<ul>
						<li><b>Nom : </b><t t-esc="$user->name"/></li>
						<li><b>Prénom : </b><t t-esc="$user->firstname"/></li>
						<li><b>Section : </b><t t-esc="$user->section"/></li>
						<li><b>Ecole : </b><t t-esc="$user->school"/></li>
					</ul>
					<ul>
						<li><b>Inscrit le : </b><t t-esc="$user->subscription"/></li>
					</ul>
				</div>
			</div>
		</t>
	</template>
	
	<template id="website.user_subscription" name="User Subscription Page">	
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Inscription <small>Créer votre compte</small>
				</h1>
			</div>
			<div class="row">
				<div class="col-md-12">
					<form class="form-horizontal" role="form" method="POST" t-att-action="$url('/user/register')">
						<div t-if="$error" class="alert alert-danger" role="alert">
							<t t-esc="$error"/>
						</div>
			          	<div class="form-group">
			            	<label class="col-lg-3 control-label">Prénom:</label>
			            	<div class="col-lg-8">
			              		<input class="form-control" type="text" name="firstname" t-att-value="$firstname" required="required"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-lg-3 control-label">Nom:</label>
			            	<div class="col-lg-8">
			              		<input class="form-control" type="text" name="lastname" t-att-value="$lastname" required="required"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-lg-3 control-label">Email:</label>
			            	<div class="col-lg-8">
			              		<input class="form-control" type="email" name="email" t-att-value="$email" required="required"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Username:</label>
			            	<div class="col-md-8">
			              		<input class="form-control" type="text" name="username" t-att-value="$username" required="required"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Password:</label>
			            	<div class="col-md-8">
			              		<input class="form-control" name="password" type="password" required="required"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Confirm password:</label>
			            	<div class="col-md-8">
			              		<input class="form-control" name="confirm_password" type="password" required="required"/>
			            	</div>
			          	</div>
			          	<hr/>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Région (ville):</label>
			            	<div class="col-md-8">
			              		<input class="form-control" type="text" name="city" t-att-value="$city"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Etude:</label>
			            	<div class="col-md-8">
			              		<input class="form-control" type="text" name="study" t-att-value="$study"/>
			            	</div>
			          	</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label">Ecole:</label>
			            	<div class="col-md-8">
			              		<input class="form-control" type="text" name="school" t-att-value="$school"/>
			            	</div>
			          	</div>
  						<div class="form-group">
    						<div class="col-sm-offset-3">
      							<div class="checkbox">
							        <label>
							         <input type="checkbox" name="$profile_public"/> Mon profile sera publique
							        </label>
      							</div>
    						</div>
  						</div>
			          	<div class="form-group">
			            	<label class="col-md-3 control-label"></label>
			            	<div class="col-md-8">
			              		<button type="submit" class="btn btn-primary">Enregister</button>
			              		<span></span>
			              		 <button type="reset" class="btn btn-default">Annuler</button>
			            	</div>
			          	</div>
			        </form>
				</div>
			</div>
		</t>
	</template>

</data>