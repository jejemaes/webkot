<?xml version="1.0" encoding="UTF-8"?>
<data>
	
	<template id="gossip.page_gossip_list" name="Page Gossip List">	   
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Les Potins
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
			    	<t t-foreach="$gossips" t-as="$gossip">
			    		<t t-call="gossip.gossip"/>
						<div class="clearfix"></div>
			    	</t>
			    	<t t-call="website.pagination">
		        		<t t-set="pager" t-value="$pager"/>
		        		<t t-set="page" t-value="$page"/>
		        		<t t-set="total" t-value="$total_page"/>
		        	</t>
			    </div>
			    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
			    
			    </div>
			</div>
		</t>
	</template>
	
	<template id="gossip.page_gossip" name="Page Gossip">	   
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Les Potins
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
					<t t-call="gossip.gossip"/>
			    </div>
			    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
			    
			    </div>
			</div>
		</t>
	</template>
	
	<template id="gossip.gossip" name="Gossip content">
		<div t-att-id="'gossip-' . $gossip->id">
			<h4>
				<span class="text-muted">Il parait que ... </span>
				<span t-att-id="'gossip-content-' . $gossip->id"><t t-esc="$gossip->content"/></span>
			</h4>
			<div class="row">	
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<i class="fa fa-user"></i> Publi√© par <a t-att-href="$router->urlFor('website_user_profile', array('user_id' => $gossip->userid))"><t t-esc="$gossip->user"/></a> | 
				<i class="fa fa-calendar"></i> le <t t-esc="$gossip->timestamp"/> | 
				<div class="btn-group btn-group-xs">
					<t t-if="$session->user">
						<a t-att-href="$router->urlFor('action_gossip_like', array('action' => 'like', 'gossip_id' => $gossip->id))" t-att-id="'gossip-disliker-popover-' . $gossip->id" type="button" class="btn btn-default" data-toggle="popover" data-container="body" data-original-title="Dislikers" >
							<i class="fa fa-thumbs-up"></i> <span><t t-esc="count($gossip->liker)"/></span> 
						</a>
					</t>
					<t t-if="!$session->user">
						<button t-att-id="'gossip-liker-popover-' . $gossip->id" type="button" class="btn btn-default" data-toggle="popover" data-container="body" data-original-title="Likers" title="">
							<i class="fa fa-thumbs-up"></i> <span><t t-esc="count($gossip->liker)"/></span> 
						</button>
					</t>
					<!--<script>$('#gossip-liker-popover-151').popover({content : function(){return gossipGetCommenter('http://www.webkot.be/server.php?module=gossip&action=getliker',151);},placement : 'top', html : true, trigger:'click'});</script>-->
					
					<t t-if="$session->user">
						<a t-att-href="$router->urlFor('action_gossip_like', array('action' => 'dislike', 'gossip_id' => $gossip->id))" t-att-id="'gossip-disliker-popover-' . $gossip->id" type="button" class="btn btn-default" data-toggle="popover" data-container="body" data-original-title="Dislikers" >
							<i class="fa fa-thumbs-down"></i> <span><t t-esc="count($gossip->disliker)"/></span> 
						</a>
					</t>
					<t t-if="!$session->user">
						<button t-att-id="'gossip-disliker-popover-' . $gossip->id" type="button" class="btn btn-default" data-toggle="popover" data-container="body" data-original-title="Dislikers" title="">
							<i class="fa fa-thumbs-down"></i> <span><t t-esc="count($gossip->disliker)"/></span> 
						</button>
					</t>
					
					<!--script>$('#gossip-disliker-popover-151').popover({content : function(){return gossipGetCommenter('http://www.webkot.be/server.php?module=gossip&action=getdisliker',151);},placement : 'top', html : true, trigger:'click'});</script>-->
				</div>
				</div>
			</div>
		</div>
	</template>
	
</data>
