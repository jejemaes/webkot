<?xml version="1.0" encoding="UTF-8"?>
<data>

	<template id="page.page_container" name="Page Structure">	   
		<t t-call="website.layout">
			<div class="row">
				<h1>
					<t t-esc="$page->title"/>
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			    	<t t-raw="$page->content"/>
			    </div>
			</div>
		</t>
	</template>
	
	<template id="page.page_list" name="Page List">	   
		<t t-call="website.layout">
			<div class="row">
				<h1>
					Liste des Pages
				</h1>
			</div>
			<div class="row">
			    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			    	<table class="table table-striped table-condensed">
                  		<thead>
		                  	<tr>
		                      	<th>Id</th>
		                      	<th>Username</th>                                          
		                  	</tr>
		              	</thead>  
		              	<tbody>
		              		<t t-foreach="$pages" t-as="$p">
			              		<tr>
	                    			<td><t t-esc="$p->title"/></td>
	                    			<td><a t-att-href="$router->urlFor('page_page', array('slug' => $p->id))"><t t-esc="$p->title"/></a></td>                                     
	                			</tr>
		              		</t>
                		</tbody>
		        	</table>
			    </div>
			</div>
		</t>
	</template>
	
</data>
